/* 下划线 */
.keyword-container {
  padding: 25rpx;
}
.keyword-container .title {
  font-size: 30rpx;
  color: #222222;
}
.keyword-container .title text:last-child {
  color: #999;
}
.keyword-container .tag-list {
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0 60rpx 0;
}
.keyword-container .tag-list view {
  font-size: 28rpx;
  color: #999;
  border: 1rpx solid #999;
  border-radius: 8rpx;
  padding: 6rpx 15rpx;
  margin: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

