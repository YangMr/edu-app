/* 下划线 */
page {
  height: 100%;
}
.category-box {
  height: 100%;
  display: flex;
}
.category-box .left {
  width: 200rpx;
  background-color: #F8F9FB;
}
.category-box .left .title > view {
  color: #000;
  text-align: center;
  font-size: 30rpx;
  color: #888888;
  width: 200rpx;
  line-height: 40rpx;
  padding: 55rpx 30rpx;
  position: relative;
}
.category-box .left .title > view:before {
  position: absolute;
  content: '';
  width: 0rpx;
  height: 0rpx;
  border-right: 6rpx solid #345dc2;
  border-radius: 30rpx;
  left: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  transition: .3s;
}
.category-box .left .title .active {
  color: #007aff;
  font-size: 33rpx;
  font-weight: bold;
}
.category-box .left .title .active:before {
  height: 50rpx;
}
.category-box .right {
  background-color: #fff;
  padding-left: 15rpx;
}
.category-box .right .tag {
  display: flex;
  flex-wrap: wrap;
  padding: 35rpx 0 0 10rpx;
}
.category-box .right .tag view {
  min-width: 160rpx;
  border: 1rpx solid #999;
  padding: 0 5rpx;
  margin: 15rpx 5rpx;
  border-radius: 30rpx;
  font-size: 25rpx;
  line-height: 60rpx;
  text-align: center;
}

