.course-item {
  display: flex;
  padding: 20rpx 0;
  width: 100%;
  border-bottom: 1rpx solid #F1F1F1;
}
.course-item .item-left {
  width: 290rpx;
  height: 160rpx;
  position: relative;
  margin-right: 20rpx;
  overflow: hidden;
}
.course-item .item-left .course-cover {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.course-item .item-left .course-time {
  position: absolute;
  right: 5rpx;
  bottom: 5rpx;
  color: #fff;
  background-color: rgba(51, 51, 51, 0.4);
  border-radius: 20rpx;
  font-size: 22rpx;
  padding: 0 6px;
}
.course-item .item-right {
  height: 160rpx;
  padding-top: 5rpx;
  padding-left: 5rpx;
  justify-content: space-between;
  overflow: hidden;
}
.course-item .item-right .title {
  max-width: 365rpx;
  height: 70rpx;
  line-height: 35rpx;
  font-size: 28rpx;
  font-weight: bold;
}
.course-item .item-right .info .nickname {
  font-size: 23rpx;
  color: #999;
}
.course-item .item-right .info .count {
  display: flex;
  align-items: center;
}
.course-item .item-right .info .count .iconfont {
  font-size: 23rpx;
  color: #222222;
}
.course-item .item-right .info .count .money {
  font-size: 28rpx;
  color: #FB6932;
  padding-right: 30rpx;
  width: 130rpx;
}

